{% extends '/_layouts/pageWithSidebar.twig' %}

{% block content %}
	{{ controllerName }} {{ actionName }}

	<form class="form-horizontal" action="/contact/index" method="post">
		<div class="form-group">
			<label for="department" class="col-xs-3">Abteilung</label>
			<div class="col-xs-9">
				<label for="department" class="sr-only">
					<input type="radio" value="keine" name="department" checked="true"/>
					bitte wählen
				</label>
				<label for="department">
					<input type="radio" value="chef" name="department"/>
					Küche
				</label>
				<label for="department">
					<input type="radio" value="account" name="department"/>
					Buchhaltung
				</label>
			</div>
		</div>
		<div class="form-group">
			<label for="name" class="col-xs-3">Ihr Name</label>
			<div class="col-xs-9">
				<input type="text" name="name" class="form-control" id="ContactFormUserName" placeholder="Ihr Name">
			</div>
		</div>
		<div class="form-group">
			<label for="email" class="col-xs-3">Ihre Email-Adresse</label>
			<div class="col-xs-9">
				<input type="email" name="email" class="form-control" id="ContactFormUserEmail"
					   placeholder="Ihre Email-Adresse">
			</div>
		</div>
		<div class="form-group">
			<label for="message" class="col-xs-3">Ihre Nachricht</label>
			<div class="col-xs-9">
				<textarea name="message" class="form-control" id="ContactFormMessage" placeholder="Ihr Name">

				</textarea>
			</div>
		</div>
		<input type="submit" class="btn btn-danger pull-right" name="submit" value="sender"/>
		<input type="hidden" name="hidden" value="geheim"/>
	</form>

{% endblock %}
