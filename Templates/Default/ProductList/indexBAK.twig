{% include '/_Parts/htmlHeader.twig' %}

{% include '/_Parts/mainMenu.twig' %}

{% include '/_Parts/breadcrumb.twig' %}

{% include '/_Parts/pageHeader.twig' %}

<div class="container" style="min-height: 400px;">
	<div class="row">
		<div class="hidden-xs col-sm-4">
			{% include '/_Parts/sidebar.twig' %}
		</div>
		<div class="col-xs-12 col-sm-8">


		<nav aria-label="Page navigation">
			<ul class="pagination">
				<li>
					<a href={{ paginator.getBeforeUrl }} aria-label="Previous">
						<span aria-hidden="true">&laquo;</span>
					</a>

				</li>

				<li><a href="#">1</a></li>

				<li>

					<a href={{ paginator.getNextUrl }} aria-label="Next">
						<span aria-hidden="true">&raquo;</span>
					</a>
				</li>
			</ul>
		</nav>

			<div class="row">

		{% for productItem in productList %}
			<div class="col-xs-12 col-sm-4 col-md-4 col-lg-3">
				<div class="thumbnail">
					<img src="{{ productItem.getPictureUrl }}" alt="bild">
					<div class="caption">
						<h3>{{ productItem.getName }}</h3>
						<p>{{ productItem.getDescription }}</p>
						<p>{{ productItem.getPrice }} Euro</p>
						<p><a href="{{ productItem.getDetailUrl() }}" class="btn btn-primary>" role="button">Produktdetails</a></p>
					</div>
				</div>
			</div>
		{% endfor %}

				</div>

	</div>
	</div>
</div>
</div>
</div>
</div>

