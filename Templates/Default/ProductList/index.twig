                        </a>
                    </li>
                </ul>{#
                {% include './Parts/Paginator.twig' with { 'paginator':productList.getPaginator } %}#}

                <div class="pull-right">
                    <a href="/productlist/index/?sortby=price">Price^</a>
                </div>

            </div>


            <div class="row">
                <div class="row">
                    {% for productListItem in productList %}
                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail">
                                <img src="{{ productListItem.getThumb.getThumbUrl }}"
                                     alt="{{ productListItem.getThumb.getAltTag }}">
                                <div class="caption">
                                    <h3>{{ productListItem.getName }}</h3>
                                    <p>{{ productListItem.getDescription }}</p>
                                    <p><a href="#" class="btn btn-primary" role="button">bestellen</a></p>
                                    <p>ab {{ productListItem.getDefaultPrice.getGrossPriceAsHtml | raw }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

        </div>
    </div>
</div>

