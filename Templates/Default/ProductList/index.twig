<div class="container" style="min-height: 400px;">
    <div class="row">
        <div class="hidden-xs col-md-4">
            {% include '/_Parts/sidebar.twig' %}
        </div>
        <div class="col-xs-12 col-md-8">

            <div>

                <ul class="pagination">
                    <li>
                        <a href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
